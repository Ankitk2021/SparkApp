<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SparkApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowBackground">@color/app_back_ground</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="hintTextColor">@color/hint_color</item>

    </style>

    <style name="Theme.SparkApp" parent="Base.Theme.SparkApp" />
    
    <style name="SplashTheme" parent="Theme.SplashScreen">

        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_logo</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.SparkApp</item>

    </style>
</resources>